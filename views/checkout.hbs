        }
        
    },
     submitHandler: function (form) {
      // form.submit();   //  commented this

      submitForm(); //  ADDED this call
    },
    
  });
}
function submitForm() {
    $("#form").submit((e)=>{
      e.preventDefault()
      $.ajax({
        url:'/checkoutSubmit',
        method:'post',
        data:$('#form').serialize(),
        success:(response)=>{
          if(response.status){
            location.href='/success'
          }else{
            location.href='/'
          }
        }
      })
    })
}
</script> 
