<script>
	function addToCart(proId){
    $.ajax({
        url:'/addToCart/'+proId,
        method:'get',
        success:(response)=>{
			if(response.status){
				alert("Product Added to cart")
				location.href='/users'
				let count=$('#cartCount').html()
				count=parseInt(count)+1
				$('#cartCount').html(count)
			}
			else{
				location.href='/'
			}
        }
    })
}
